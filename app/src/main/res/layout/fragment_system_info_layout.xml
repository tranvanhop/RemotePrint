<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/component_padding">

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/edit_text"
                        android:id="@+id/edtName"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/component_margin"
                        android:hint="@string/text_hint_name"/>

                    <Button
                        style="@style/button"
                        android:id="@+id/btnName"
                        android:text="@string/text_edit" />

                </LinearLayout>

                <View
                    style="@style/separator"
                    android:layout_below="@+id/llName"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/component_padding">

                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/edit_text"
                        android:id="@+id/edtAddress"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/component_margin"
                        android:hint="@string/text_hint_address"/>

                    <Button
                        style="@style/button"
                        android:id="@+id/btnAddress"
                        android:text="@string/text_edit" />

                </LinearLayout>

                <View
                    style="@style/separator"
                    android:layout_below="@+id/llAddress"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/component_padding">

                <LinearLayout
                    android:id="@+id/llCashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/edit_text"
                        android:id="@+id/edtCashier"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/component_margin"
                        android:hint="@string/text_hint_cashier"/>

                    <Button
                        style="@style/button"
                        android:id="@+id/btnCashier"
                        android:text="@string/text_edit" />

                </LinearLayout>

                <View
                    style="@style/separator"
                    android:layout_below="@+id/llCashier"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/component_padding">

                <LinearLayout
                    android:id="@+id/llVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/edit_text"
                        android:id="@+id/edtVersion"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/component_margin"
                        android:hint="@string/text_hint_version"/>

                    <Button
                        style="@style/button"
                        android:id="@+id/btnVersion"
                        android:text="@string/text_edit" />

                </LinearLayout>

                <View
                    style="@style/separator"
                    android:layout_below="@+id/llVersion"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/component_padding">

                <Button
                    style="@style/button"
                    android:id="@+id/btnCancel"
                    android:layout_toLeftOf="@+id/btnSave"
                    android:layout_marginRight="@dimen/component_margin"
                    android:text="@string/text_cancel" />

                <Button
                    style="@style/button"
                    android:id="@+id/btnSave"
                    android:layout_alignParentRight="true"
                    android:text="@string/text_save" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>